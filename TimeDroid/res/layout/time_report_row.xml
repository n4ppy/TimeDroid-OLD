<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
<TextView android:id="@+id/textTimeRepProj" xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="10dp"
     android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
<TextView android:id="@+id/textTimeRepDesc" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_toRightOf="@+id/textTimeRepProj"
    android:paddingLeft="10dp"
    android:layout_height="wrap_content" android:layout_width="wrap_content"/>
<TextView android:id="@+id/textTimeRepStart" xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="10dp"
    android:layout_below="@+id/textTimeRepProj"
    android:layout_height="wrap_content" android:layout_width="160dp"/>
<TextView android:id="@+id/textTimeRepTotal" xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="10dp"
    android:layout_toRightOf="@+id/textTimeRepStart"
    android:layout_below="@+id/textTimeRepProj"
    android:layout_height="wrap_content" android:layout_width="100dp"/>
<ToggleButton android:text="ToggleButton" 
              android:id="@+id/toggleButtonTimeRepActive" 
              android:layout_width="wrap_content" 
              android:layout_height="wrap_content" android:layout_alignParentRight="true" android:focusable="false" android:focusableInTouchMode="false" android:enabled="false"/>
</RelativeLayout>







