<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
   android:gravity="center"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
<DigitalClock android:text="@+id/DigitalClock01" 
              android:id="@+id/DigitalClock01"
              android:padding="5dp"        
              android:gravity="center"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"></DigitalClock>
<TextView android:text="@string/app_name" 
          android:gravity="center" 
          android:padding="5dp"        
          android:layout_below="@+id/DigitalClock01"
          android:layout_height="wrap_content" 
          android:layout_width="fill_parent" 
          android:id="@+id/app_name"></TextView>
<TextView android:text="@string/app_version" 
          android:gravity="center" 
          android:padding="5dp"        
          android:layout_below="@+id/app_name"
          android:layout_height="wrap_content" 
          android:layout_width="fill_parent" 
          android:id="@+id/app_version"></TextView>
</RelativeLayout>
